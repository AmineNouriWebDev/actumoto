RewriteEngine On

# Forcer HTTPS + supprimer www (en une seule redirection)
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.actumoto\.tn$ [NC]
RewriteRule ^(.*)$ https://actumoto.tn/$1 [L,R=301]

# Rediriger les fichiers/dossiers inexistants vers index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]

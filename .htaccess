# ====================================================
# ACTUMOTO.TN - CONFIGURATION SIMPLIFIÉE .HTACCESS
# ====================================================

# Activer le moteur de réécriture
RewriteEngine On

# ----------------------------------------------------
# 1. REDIRECTIONS ESSENTIELLES
# ----------------------------------------------------

# Rediriger HTTP vers HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Rediriger WWW vers NON-WWW
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# ----------------------------------------------------
# 2. GESTION DES ERREURS
# ----------------------------------------------------

# Page d'erreur 404 personnalisée
ErrorDocument 404 /index.html

# ----------------------------------------------------
# 3. COMPRESSION ET CACHE
# ----------------------------------------------------

<IfModule mod_deflate.c>
    # Compresser les fichiers texte
    AddOutputFilterByType DEFLATE text/html text/plain text/xml
    AddOutputFilterByType DEFLATE text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
</IfModule>

<IfModule mod_expires.c>
    # Activer les expirations
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS, JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Polices
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ----------------------------------------------------
# 4. SÉCURITÉ DE BASE
# ----------------------------------------------------

# Empêcher l'accès aux fichiers .htaccess
<Files ".ht*">
    Require all denied
</Files>

# Empêcher l'accès aux fichiers sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|env)$">
    Require all denied
</FilesMatch>

# Empêcher l'accès aux répertoires (listing)
Options -Indexes

# ----------------------------------------------------
# 5. REDIRECTION DES URLS INEXISTANTES
# ----------------------------------------------------

# Rediriger les fichiers HTML manquants vers l'accueil
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ [NC]
RewriteRule ^(.*)$ /index.html [L,R=302]